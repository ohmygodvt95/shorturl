<div class="origin">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h2>List short URLs</h2>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <hr>
      <%= paginate @urls, :theme => 'twitter-bootstrap-3' %>
      <hr>
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>Original URL</th>
          <th>Created</th>
          <th>Short URL</th>
          <th>Views</th>
        </tr>
        </thead>
        <tbody>
        <% @urls.order(id: :desc).limit(10).each do |item| %>
          <tr>
            <td><%= link_to truncate(item.origin, length: 70), item.origin, title: item.origin %></td>
            <td><%= time_ago_in_words item.created_at %></td>
            <td><%= link_to item.alias, item.alias %>
              <i class="fa fa-fw fa-copy copy" data="<%= root_url + item.alias %>"
                 data-toggle="tooltip" data-placement="bottom" title="Copy short URL"></i>
            </td>
            <td><%= item.views %> <i class="fa fa-fw fa-eye"></i></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
